<script src="/assets/application-24beca728fca1f867e72fa74045e3228.js" type="text/javascript"></script>
<script src="/static/MersenneTwister19937.js" type="text/javascript"></script>
<script src="/static/sha256.js" type="text/javascript"></script>

<script charset='utf-8' type='text/javascript'>
//<![CDATA[
$(function() {
  ProvablyFair.setup();
});

var ProvablyFair = function() { return {
  animationTime: 300,

  verify: function(client_seed, hash_secret, secret, final_shuffle) {
    var verifications = {};

    // Verify the format of `secret`.
    try { var secretJson  = $.parseJSON(secret) } catch(e) {};
    secretJson = secretJson || {}
    if (secretJson.server_seed && secretJson.initial_shuffle) {
      verifications.secret_format = true;
    }

    // Verify that the SHA256 hash of `secret` matches the value the user saw.
    if (CryptoJS.SHA256(secret) == hash_secret) {
      verifications.hash_secret = true;
    }

    // Hash `client_seed` and `server_seed`.
    var seedString = CryptoJS.SHA256(client_seed + secretJson.server_seed).toString();

    // Take the bottom 32 bits of the hash to use as the seed for the RNG.
    var seed = parseInt(seedString.substring(seedString.length - 8), 16);
    var mt = new MersenneTwister19937();
    mt.init_genrand(seed);

    // Verify that the reshuffled deck matches `final_shuffle`.
    if(ProvablyFair.shuffle(String(secretJson.initial_shuffle), mt) == final_shuffle) {
      verifications.final_shuffle = true;
    }

    // We now have 3 booleans stored in the `verifications` hash.
    // If all of these are true, then we have a fully verified shuffle.
    // Send the `verifications` hash to the animate method so the
    // results can be displayed to the user.
    ProvablyFair.animate(verifications);
  },

  // Shuffles a string using the Fisher-Yates shuffle algorithm.
  shuffle: function(deck_string, mt) {
    var tmp, new_deck = deck_string.split('');
    for(var i = new_deck.length - 1; i > 0; i--) {
      r = mt.genrand_int32() % (i + 1);
      tmp = new_deck[r];
      new_deck[r] = new_deck[i];
      new_deck[i] = tmp;
    }
    return new_deck.join('');
  },

  animate: function(verifications) {
    $('.list .item,.list .verified, .list .not_verified').hide();
    $('.list .lock').addClass('background', this.animationTime);
    $('.list .item').removeClass('failed');
    if (!verifications.secret_format) {
      $('.list .secret_format').addClass('failed');
    }
    if (!verifications.hash_secret) {
      $('.list .hash_secret').addClass('failed');
    }
    if (!verifications.final_shuffle) {
      $('.list .final_shuffle').addClass('failed');
    }

    $('.list .secret_format').delay(this.animationTime).fadeIn();
    $('.list .hash_secret').delay(this.animationTime * 2).fadeIn();
    $('.list .final_shuffle').delay(this.animationTime * 3).fadeIn();
    if (verifications.secret_format && verifications.hash_secret && verifications.final_shuffle) {
      $('.list .verified').delay(this.animationTime * 4).fadeIn();
    } else {
      $('.list .not_verified').delay(this.animationTime * 4).fadeIn();
    }

  },

  setup: function() {
    $('#calculator input[type=text]').each(function() {
      if ($(this).val() != '') {
        $('#calculator .autofill').show();
        return false;
      }
    });
    $('#calculator input').change(function() {
      $('#calculator .autofill').hide();
      $('.list .item,.list .verified, .list .not_verified').hide();
      $('.list .lock').removeClass('background', this.animationTime);
    });
    $("#calculator_verify").click(function() {
      ProvablyFair.verify($('#client_seed').val(), $('#hash_secret').val(), $('#secret').val(), $('#final_shuffle').val());
    });
  }
}}();


//]]>
</script>
